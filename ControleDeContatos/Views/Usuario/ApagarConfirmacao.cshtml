@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuário (@Model.Nome)?</h3>
</div>

<br />
<a class="btn btn-primary btn-lg btn-block d-block w-100" role="button" asp-asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
<br />
<a class="btn btn-danger btn-lg btn-bloc d-block w-100" role="button" asp-asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>